{
  "name": "anki-browse-web",
  "version": "0.1.8",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev-addon": "node scripts/setup-dev.js",
    "dev-api": "node --watch-path=addon scripts/exec.js uv run python tests/server.py",
    "dev-fixture": "cross-env ANKI_PORT=5680 pnpm run --stream \"/^dev$|^dev-api$/\"",
    "fixture": "uv run python tests/prepare.py",
    "build": "vite build",
    "build-addon": "vite build && cd addon && zip -r ../anki-browse-web.ankiaddon . -x '__pycache__/*'",
    "lint": "oxfmt && uv run ruff format . && uv run ruff check --fix .",
    "lint-check": "oxfmt --check && uv run ruff format --check . && uv run ruff check .",
    "tsc": "tsc -b",
    "test-e2e": "playwright test",
    "release": "bumpp"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.11.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "bumpp": "^10.3.2",
    "cross-env": "^10.1.0",
    "oxfmt": "^0.20.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa"
}
